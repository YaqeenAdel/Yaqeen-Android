<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.onboarding.terms_condition.TermsAndConditionFragment">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:gravity="center|start"
            android:text="@string/terms_condition"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_terms_condition"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:nestedScrollingEnabled="false"
            android:saveEnabled="false"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideInset"
            android:scrollbarSize="@dimen/_6sdp"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/black"
            android:scrollbarTrackVertical="@color/silver_medal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_accept"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:itemCount="10"
            tools:listitem="@layout/item_terms_condition" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CustomMaterialButtonStyle"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintStart_toEndOf="@id/btn_reject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:paddingVertical="@dimen/_12sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:text="@string/accept"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CustomMaterialButtonStrokeStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_accept"
            app:layout_constraintBottom_toBottomOf="@id/btn_accept"
            app:layout_constraintTop_toTopOf="@id/btn_accept"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:paddingVertical="@dimen/_12sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:text="@string/reject"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>