<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.ui.main.treatment.add.medical_reminder.MedicalReminderInfoFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:background="@color/white"
            app:titleTextAppearance="@style/ToolbarTitleStyle"
            app:title="@string/medical_reminder"
            app:titleTextColor="@color/light_black"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleCentered="true"/>

        <TextView
            android:id="@+id/tv_page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:textColor="@color/maiden_mist"
            android:textSize="@dimen/_11ssp"
            android:text="2/3"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tv_page_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_page_number"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_color_30"
                android:background="@drawable/background_view_selected_colored"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/background_view_selected_colored"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:backgroundTint="@color/primary_color_30"
                android:background="@drawable/background_view_selected_colored"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_healthcare_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:paddingVertical="@dimen/_4sdp"
            android:text="@string/healthcare_alert"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_doctor_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/light_black"
            android:textColorHint="@color/light_black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/gray"
            app:endIconMode="clear_text"
            app:endIconTint="@color/x_dark_gray"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@id/tv_healthcare_alert"
            app:layout_constraintEnd_toEndOf="@id/tv_healthcare_alert"
            app:layout_constraintTop_toBottomOf="@id/tv_healthcare_alert">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:hint="@string/doctor_s_name"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingVertical="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/light_black"
                android:textCursorDrawable="@color/xx_dark_gray"
                android:textSize="@dimen/_12ssp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_location"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/light_black"
            android:textColorHint="@color/light_black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/gray"
            app:endIconDrawable="@drawable/ic_location_map_outline"
            app:endIconMode="custom"
            app:endIconTint="@color/primary_color"
            android:layout_marginTop="@dimen/_14sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@id/text_layout_doctor_name"
            app:layout_constraintEnd_toEndOf="@id/text_layout_doctor_name"
            app:layout_constraintTop_toBottomOf="@id/text_layout_doctor_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:hint="@string/location"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:fontFamily="sans-serif"
                android:paddingVertical="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/light_black"
                android:textCursorDrawable="@color/xx_dark_gray"
                android:textSize="@dimen/_12ssp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_phone_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/light_black"
            android:textColorHint="@color/light_black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/gray"
            app:endIconDrawable="@drawable/ic_phone_outline"
            app:endIconMode="custom"
            app:endIconTint="@color/primary_color"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_layout_location"
            app:layout_constraintEnd_toEndOf="@id/text_layout_location"
            app:layout_constraintTop_toBottomOf="@id/text_layout_location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:layout_gravity="center"
                android:hint="@string/phone_number"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="phone"
                android:fontFamily="sans-serif"
                android:paddingVertical="@dimen/_14sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/light_black"
                android:textCursorDrawable="@color/xx_dark_gray"
                android:textSize="@dimen/_12ssp"/>

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:paddingVertical="@dimen/_10sdp"
            app:iconTint="@color/medium_gray"
            app:icon="@drawable/ic_next"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/_12sdp"
            android:text="@string/next"
            android:textColor="@color/medium_gray"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/light_gray"
            app:cornerRadius="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/scrollView"
            app:layout_constraintStart_toStartOf="@id/scrollView"
            app:layout_constraintTop_toBottomOf="@id/scrollView"
            app:layout_constraintVertical_bias="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>