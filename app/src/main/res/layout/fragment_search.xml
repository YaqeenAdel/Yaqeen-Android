            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="@id/text_layout_article_name"
            app:layout_constraintStart_toStartOf="@id/text_layout_article_name"
            app:layout_constraintTop_toBottomOf="@id/text_layout_article_name"
            app:layout_constraintBottom_toBottomOf="parent">
