<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yaqeen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>

    </style>


    <style name="CustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Customize attributes of the Material Button here -->
        <item name="backgroundTint">@color/silver_medal</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>


    <style name="CustomMaterialButtonStrokeStyle" parent="Widget.MaterialComponents.Button">
        <!-- Customize attributes of the Material Button here -->
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>


    <style name="ExposedDropdownMenuTheme"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorSurface">@color/white</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/_14ssp</item> <!-- Adjust text size as needed -->
        <item name="android:textStyle">bold</item> <!-- Adjust text style as needed -->
        <!-- Add more styling attributes as needed -->
    </style>

    <style name="Auth0YaqeenTheme" parent="Lock.Theme">
        <item name="Auth0.HeaderLogo">@mipmap/ic_launcher</item>
        <item name="Auth0.HeaderTitle">@string/app_name</item>
        <item name="Auth0.HeaderTitleColor">@color/primary_color</item>
        <item name="Auth0.HeaderBackground">@color/white</item>
        <item name="Auth0.PrimaryColor">@color/teal_200</item>
        <item name="Auth0.DarkPrimaryColor">@color/primary_color</item>
    </style>

</resources>